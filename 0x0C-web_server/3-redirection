#!/usr/bin/env bash
# bash script to install nginx on my web server and redirect to a page

sudo apt-get update
sudo apt-get install -y nginx

# Create a simple HTML file
echo "Hello World!" | sudo tee /var/www/html/index.nginx-debian.html > /dev/null

# Define the redirection configuration
redirect_config="location /redirect_me {\n\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n}"

# Add the redirection configuration to the default Nginx site
sudo sed -i "53s $redirect_config" /etc/nginx/sites-available/default

# Restart Nginx to apply changes
sudo service nginx restart
